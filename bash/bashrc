#!/bin/bash

# some housekeeping
set -o vi
shopt -s autocd
alias rc=". .config/bash/bashrc"

# ssh keeping tidy
alias ssh="ssh -F $HOME/.config/ssh/config"

# remind alias
alias sched="nvim $DOTREMINDERS"
alias cal="rem -cl"
alias shutdown="sudo shutdown -h now"

PS1="\w\$ "

# repos func
repos() {
	sel="$(ls ~/git | fzy | awk '{print "/home/usr/git/"$1}')"
	[ "$?" -eq 1 ] && exit

	cd "$sel"
}
