# wrapper around rbw

rbw list

if [ "$1" == "2fa" ]; then
	resp=$(rbw list | rofi -dmenu -case-smart -mesg "2fa")
else
	resp=$(rbw list | rofi -dmenu -case-smart -mesg "password")
fi

if [ "$1" == "2fa" ]; then
	rbw code "$resp" | wl-copy
else
	rbw get "$resp" | wl-copy
fi
sleep 15
echo "cleared" | wl-copy
