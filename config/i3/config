set $mod Mod4
floating_modifier $mod
tiling_drag modifier titlebar

font pango:Fantasque Sans Mono 10

# initial comfy settings
exec_always --no-startup-id xset r rate 200 80
exec_always --no-startup-id setxkbmap -option caps:super
exec_always --no-startup-id pkill xcape
exec_always --no-startup-id xcape -e 'Super_L=Escape'
exec emacs --daemon

exec --no-startup-id [ "$(hostname)" = "copernicus" ] && xrandr --output HDMI-0 --primary --mode 1920x1080 --pos 0x0 --rotate normal --auto

bindsym $mod+Return exec st
bindsym $mod+Shift+Return exec emacsclient -n -e '(u:new-frame-with-vterm)'
bindsym $mod+e exec emacsclient -c -a ""
bindsym $mod+q kill
bindsym $mod+d exec --no-startup-id dmenu_wrapper
bindsym $mod+z exec --no-startup-id rbw-dmenu-list
bindsym $mod+Shift+z exec --no-startup-id rbw-dmenu-list 2fa

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+v split v
bindsym $mod+shift+v split h
bindsym $mod+ctrl+v toggle split

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed

bindsym $mod+b exec librewolf

# very useful keybindings
bindsym $mod+x exec mpv "/home/usr/dots/common/best audio.mp3"
bindsym $mod+Shift+x exec mpv "/home/usr/dots/common/carolinacrown.mp3"

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# volume up / down
bindsym $mod+Shift+Up exec --no-startup-id "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+"
bindsym $mod+Shift+Down exec --no-startup-id "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-"
bindsym $mod+Shift+Left exec --no-startup-id i3-volume-control

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
# for some reason, on copernicus the traditional $mod+Shift+num construction
# doesn't work -- so we have to bind to parenleft and parenright, too
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
bindsym $mod+Shift+parenleft move container to workspace number $ws9
bindsym $mod+Shift+parenright move container to workspace number $ws10

# move entire desktops from one output to another
bindsym $mod+Left move workspace to output left
bindsym $mod+Right move workspace to output right
bindsym $mod+Up move workspace to output up
bindsym $mod+Down move workspace to output down

for_window [title="Bluetooth"] floating enable
for_window [class="st_floating"] floating enable
for_window [class="desktop10"] move container to workspace number $ws10, workspace number $ws10
for_window [class=".arandr-wrapped"] floating enable

#exec --no-startup-id i3-msg 'workspace "10"; append_layout ~/workspace.json'
#exec st -c bluetuith-autostart -e "bash -c 'bluetuith; exec bash'"
#exec st -c syncthing-autostart -e "bash -c 'syncthing; exec bash'"
#exec st -c ncpamixer-autostart -e "bash -c 'ncpamixer; exec bash'"
#exec st -e cmus-autostart -e cmus
#exec st -c cmus2-autostart -e bash -c 'CMUS_SOCKET=/run/user/1000/cmus2-socket cmus'
#exec --no-startup-id i3-msg 'workspace 1'

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
     bindsym Shift+h resize shrink width 10 px or 10 ppt
     bindsym Shift+j resize grow height 10 px or 10 ppt
     bindsym Shift+k resize shrink height 10 px or 10 ppt
     bindsym Shift+l resize grow width 10 px or 10 ppt
     
     bindsym h resize shrink width 5 px or 5 ppt
     bindsym j resize grow height 5 px or 5 ppt
     bindsym k resize shrink height 5 px or 5 ppt
     bindsym l resize grow width 5 px or 5 ppt
     
     bindsym Ctrl+h resize shrink width 1 px or 1 ppt
     bindsym Ctrl+j resize grow height 1 px or 1 ppt
     bindsym Ctrl+k resize shrink height 1 px or 1 ppt
     bindsym Ctrl+l resize grow width 1 px or 1 ppt
     
     bindsym q mode "default"
     bindsym Return mode "default"
     bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

mode "browser" {
     bindsym --release h exec xdotool key alt+Left
     bindsym --release j exec xdotool key ctrl+Tab
     bindsym --release k exec xdotool key ctrl+shift+Tab
     bindsym --release l exec xdotool key alt+Right
     
     bindsym q mode "default"
     bindsym Return mode "default"
     bindsym Escape mode "default"
}

bindsym $mod+n mode "browser"

mode "move" {
     bindsym Shift+h move left 40 px
     bindsym Shift+j move down 40 px
     bindsym Shift+k move up 40 px
     bindsym Shift+l move right 40 px

     bindsym h move left 20 px
     bindsym j move down 20 px
     bindsym k move up 20 px
     bindsym l move right 20 px

     bindsym Ctrl+h move left 1 px
     bindsym Ctrl+j move down 1 px
     bindsym Ctrl+k move up 1 px
     bindsym Ctrl+l move right 1 px

     bindsym c move absolute position center

     bindsym q mode "default"
     bindsym Return mode "default"
     bindsym Escape mode "default"
}

bindsym $mod+Shift+m mode "move"
bindsym $mod+m exec warpd --hint

bar {
    status_command i3pystatus -c ~/.config/i3pystatus/config.py
}
