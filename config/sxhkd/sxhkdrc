# rndusr's sxhkdrc

# program launching + sxhkd reload

super + Return
  st

super + d
  tmenu_run

super + z
	pash-dmenu

super + r
  pkill -USR1 -x sxhkd; \
  bspc wm -r

super + w
  disp && wallpaper && statusbar

super + {_,shift + }n
  nws {local,national}

super + ctrl + n
	net

super + ctrl + t
	st -e htop

{XF86AudioRaiseVolume,XF86AudioLowerVolume}
  vol {inc,dec}

super + b
	fire

super + shift + b
	fire -P

super + ctrl + b
	chromium

super + {_,shift + }v
  vol {inc,dec}

# bspwm
super + q
  bspc node -c

super + e
  bspc quit 0

super + shift + e
      	systemctl suspend

super + {_,ctrl +,shift + }{h,j,k,l}
  bspc node -{f,p,s} {west,south,north,east}

super + {_,shift + } {1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'

super + {t,f,s}
  bspc node -t {tiled,floating,fullscreen}

super + shift + t
	bspwm-toggle-gaps

alt + F4
	exit
